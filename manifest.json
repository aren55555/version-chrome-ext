{
  "manifest_version": 3,
  "name": "JSON Version to GitHub",
  "version": "1.0.0",
  "description": "Detects version info in JSON pages and creates direct links to GitHub commits. Perfect for API version tracking.",
  "author": "Aren Patel",
  "homepage_url": "https://github.com/aren55555/version-chrome-ext",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JSON Version to GitHub"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}